<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="64dp"

    android:background="@color/dark">
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/horizontalScrollView"
        android:layout_centerHorizontal="true"
        android:padding="4dp"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/brightness"
                android:background="@null"
                android:text="{fa-sun-o}"
				android:textSize="32dp"
				android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contrast"
                android:background="@null"
                android:layout_toRightOf="@+id/brightness"
                android:text="{fa-adjust}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/saturation"
                android:background="@null"
                android:layout_toRightOf="@+id/contrast"
                android:text="{fa-magic}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rotate"
                android:background="@null"
                android:layout_toRightOf="@+id/saturation"
                android:text="{fa-undo}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/blur"
                android:background="@null"
                android:layout_toRightOf="@+id/rotate"
                android:text="{fa-tint}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/crop"
                android:background="@null"
                android:layout_toRightOf="@+id/blur"
                android:text="{fa-crop}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/filter"
                android:background="@null"
                android:layout_toRightOf="@+id/crop"
                android:text="{fa-picture-o}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sticker"
                android:background="@null"
                android:layout_toRightOf="@+id/filter"
                android:text="{fa-tag}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/photo"
                android:background="@null"
                android:layout_toRightOf="@+id/sticker"
                android:text="{fa-camera}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/load"
                android:background="@null"
                android:layout_toRightOf="@+id/photo"
                android:text="{fa-arrow-circle-o-down}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
            <IconButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save"
                android:background="@null"
                android:layout_toRightOf="@+id/load"
                android:text="{fa-floppy-o}"
                android:textSize="32dp"
                android:textColor="#FF959595"
                android:padding="12dp"/>
        </RelativeLayout>
    </HorizontalScrollView>
</RelativeLayout>